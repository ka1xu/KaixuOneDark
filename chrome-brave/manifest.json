{
  "manifest_version": 3,
  "name": "KaixuOneDark Theme",
  "version": "1.0.0",
  "description": "A dark theme based on OneDark Pro Night Flat for Chrome/Brave browsers",
  "author": "ka1xu",
  "homepage_url": "https://github.com/ka1xu/KaixuOneDark",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["theme.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "KaixuOneDark Theme",
    "default_popup": "popup.html"
  }
}
